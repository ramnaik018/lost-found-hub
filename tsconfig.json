{
  "compilerOptions": {
    "target": "ES2020", // Tell TS to convert to which version of JavaScript 
    "module": "commonjs",// Tell TS to use commonjs module in the transpiled code (for functionalities like import/export or require())
    "outDir": "./dist",// directory for destination of JS files
    "rootDir": "./src", // directory for source TS files
    "strict": true, // Tell Transpiled JS code to be used in Strict mode.
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
} 

